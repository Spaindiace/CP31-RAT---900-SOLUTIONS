                    reverse(a.begin(),a.end());
                     int l=len-1;
                      while (k>0){
                             sume+=(a[med]);
                            med+=((n/2)+1);
                             k--;
                      }
                    
                    
                    cout<<sume<<endl;
                      return;
                    
              
              
          
          
    
}

int main(){
