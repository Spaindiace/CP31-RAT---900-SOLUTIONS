int bs(vector<int>&a,int x){
    int l=0,r=a.size()-1;
    while(l<=r){
        int m=(l+r)/2;
        if(a[m]==x) return m;
        if(a[m]<x) l=m+1;
        else r=m-1;
    }
    return -1;
}

int gcd(int a, int b) {
    return b == 0 ? a : gcd(b, a % b);
}

int f(int x,ll sume){
    while(x>0){
        int res=x%10;
        sume+=res;
        x/=10;
    }
    return sume;
}

