#include <bits/stdc++.h>
using namespace std;
#define ll long long
#pragma GCC optimize("O3,unroll-loops")
 
void solve(){
  
 int n;
 cin>>n;
 
 vector<int>a(n);
 for(auto&k:a){
   cin>>k;
 }
 
  int maxi=INT_MIN;
  for(int i=0; i<n; i++){
    maxi=max(maxi,a[(i-1+n)%n]-a[i]);
  }
 for(int i=1; i<n; i++){
   maxi=max(maxi,a[i]-a[0]);
 }
        for(int i=0; i<n-1; i++){
          maxi=max(maxi,a[n-1]-a[i]);
        }
        cout<<maxi<<endl;
}
 
signed main() {
  
   ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;
    cin>>t;
    while(t--)
   {
      
      solve ();
    }
    return 0;
} 
