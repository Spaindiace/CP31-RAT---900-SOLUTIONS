#include <bits/stdc++.h>
using namespace std;
#define ll long long
#pragma GCC optimize("O3,unroll-loops")
 
void solve() {
    int n;
    cin >> n;
    vector<int> a(n);

    for (auto &k : a) {
        cin >> k;
    }

   if(n%2!=0){
    cout<<"4"<<endl;
    cout<<1<<" "<<2<<endl;
    cout<<1<<" "<<2<<endl;
    cout<<2<<" "<<n<<endl;
    cout<<2<<" "<<n<<endl;
    return;
    
  }
  else{
    cout<<2<<endl;
    cout<<1<<" "<<n<<endl;
    cout<<1<<" "<<n<<endl;
    return;
  }
   
   
}
 
signed main() {
    ios_base::sync_with_stdio(false);
    cin.tie(NULL);

    int t;
    cin >> t;
    while (t--) {
        solve();
    }
    return 0;
}
