#include <bits/stdc++.h>
using namespace std;
#define ll long long
#pragma GCC optimize("O3,unroll-loops")

void solve(){
  
  int n;
  cin>>n;
  
  std::vector<int>a(n);
  for(auto&k:a){
    cin>>k;
  }
  bool sot=false;
  int count=0;
  
    
  for(int i=n-2; i>=0; i--){
   
    while(a[i]>=a[i+1]){
       a[i]=a[i]/2;
       
       count++;
       
       if(a[i]==0&&a[i]>=a[i+1]){
         cout<<-1<<endl;
         return;
         
       }
    }
    
  }
 
 


cout<<count<<endl;
}
 
signed main() {
  
   ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;
    cin>>t;
    while(t--)
   {
      
      solve ();
    }
    return 0;
} 
