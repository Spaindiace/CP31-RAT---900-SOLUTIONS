#include <bits/stdc++.h>
using namespace std;
#define ll long long
#pragma GCC optimize("O3,unroll-loops")
 
void solve(){
  
ll a,b,n;
 cin>>a>>b>>n;
 
 vector<ll>str(n);
 for(auto&k:str){
   cin>>k;
 }
        ll tim=0;
        ll curr=b;
        
        sort(str.rbegin(),str.rend());
        ll i=0;
    while(curr>0){
        if(curr>1){
          if(i<n){
        ll timw=curr-1;
        tim+=timw;
        curr=1;
          
        }
        else{
          tim+=curr;
          break;
        }
        }
        else if(curr==1&& i < n){
          curr=min(curr+str[i],a);
          i++;
          curr--;
        tim++;
        }
        else{
          curr--;
          tim++;
        }
       
        if(curr<1){
          break;
        }
      
    }
    cout<<tim<<endl;
        
        
        
}
 
signed main() {
  
   ios_base::sync_with_stdio(false);
    cin.tie(NULL);
    int t;
    cin>>t;
    while(t--)
   {
      
      solve ();
    }
    return 0;
} 
