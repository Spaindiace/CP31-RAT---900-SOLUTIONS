#include <bits/stdc++.h>
using namespace std;
#define ll long long
using lb = long double;
using i128 = __int128;
#define via vector<int>a(n); for(int i=0;i<n;i++) cin>>a[i];
#pragma GCC optimize("Ofast")
#define MOD 998244353
#define all(x) x.begin(), x.end()
#define rall(x) rbegin(x), rend(x)
#define rv(x)  x.begin(), x.end()
#define sz(x) int(size(x))
#define pb push_back
#define eb emplace_back
#define bk back()

int bs(vector<int>&a,int x){
    int l=0,r=a.size()-1;
    while(l<=r){
        int m=(l+r)/2;
        if(a[m]==x) return m;
        if(a[m]<x) l=m+1;
        else r=m-1;
    }
    return -1;
}

int gcd(int a, int b) {
    return b == 0 ? a : gcd(b, a % b);
}

int f(int x,ll sume){
    while(x>0){
        int res=x%10;
        sume+=res;
        x/=10;
    }
    return sume;
}

void solve(){
  
          
             int n;
                cin>>n;
                vector<int>a(n);
                 for(auto&k:a){
                   cin>>k;
                 }
                    for(int i=1; i<n-1; i++ ){
                         if(a[i]>a[i-1]&&a[i]>a[i+1]){
                                    cout<<"YES"<<endl;
                                      cout<<i-1+1<<" "<<i+1<<" "<<i+2<<endl;
                                        return;
                         }
                         else {
                             continue;
                         }
                    }
                      
               cout<<"NO"<<endl;
                 return;
               
          
    
}

int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin>>t;
    while(t--) 
    {
        solve();
    }
    return 0;
}
