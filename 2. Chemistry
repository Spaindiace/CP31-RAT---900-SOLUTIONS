#include <bits/stdc++.h>
using namespace std;
#define ll long long
using lb = long double;
using i128 = __int128;
#define via vector<int>a(n); for(int i=0;i<n;i++) cin>>a[i];
#pragma GCC optimize("Ofast")
#define MOD 998244353
#define all(x) x.begin(), x.end()
#define rall(x) rbegin(x), rend(x)
#define rv(x)  x.begin(), x.end()
#define sz(x) int(size(x))
#define pb push_back
#define eb emplace_back
#define bk back()

int bs(vector<int>&a,int x){
    int l=0,r=a.size()-1;
    while(l<=r){
        int m=(l+r)/2;
        if(a[m]==x) return m;
        if(a[m]<x) l=m+1;
        else r=m-1;
    }
    return -1;
}

int gcd(int a, int b) {
    return b == 0 ? a : gcd(b, a % b);
}

int f(int x,ll sume){
    while(x>0){
        int res=x%10;
        sume+=res;
        x/=10;
    }
    return sume;
}

void solve(){
  
          
          
          
                 int n,k;
                 cin>>n>>k;
                   string s;
                    cin>>s;
                    int len=abs(n-k);
                     unordered_map<char,int>ump;
                        for(auto&k:s){
                              ump[k]++;
                        }
                        if(ump.size()==1){
                               cout<<"YES"<<endl;
                                  return;
                        }
                         else {
                          int tot=0;
                             if(len%2==0){
                                 for(auto&p:ump){
                                       if(p.second%2!=0){
                                           
                                               tot++;
                                               
                                             }
                                       }
                                       
                                       if(tot<=k){
                                            cout<<"YES"<<endl;
                                              return;
                                       }
                                       else {
                                           cout<<"NO"<<endl;
                                             return;
                                       }
                                 }
                                 
                             
                             else {
                                   
                                  for(auto&p:ump){
                                       if(p.second%2!=0){
                                          tot++;
                                       }
                                  }
                                  if(tot-1<=k){
                                       cout<<"YES"<<endl;
                                         return;
                                  }
                                  else {
                                     cout<<"NO"<<endl;
                                        return;
                                  }
                                   
                                   
                             }
                             
                        }
                          
                          
                          
                        
                        cout<<"no"<<endl;
                          return;
                    
                
                 
          
          
    
}

int main(){
    ios::sync_with_stdio(0);
    cin.tie(0);
    int t;
    cin>>t;
    while(t--) 
    {
        solve();
    }
    return 0;
}
